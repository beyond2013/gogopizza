<p id="notice"><%= notice %></p>

<h1>Food Items</h1>

<table>
  <thead>
    <tr>
      <th>Cuisine</th>
      <th>Name</th>
      <th>Flavor</th>
      <th>Size</th>
      <th>Topping</th>
      <th>Crust</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.cuisine.name %></td>
        <td><%= food.name %></td>
        <td><%= food.flavor %></td>
        <td><%= food.size %></td>
        <td><%= food.topping %></td>
        <td><%= food.crust %></td>
        <td><%= food.price %></td>
        <td><%= image_tag food.food_image.variant(resize_to_limit: [150, nil]) if food.food_image.attached? %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food Item', new_food_path %>
